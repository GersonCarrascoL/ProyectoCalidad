<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment"
    android:orientation="vertical"
    android:background="#fafafa">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="565dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_profile"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="131dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:src="@drawable/fotocircular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Juan Gomez"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Abogado"
                android:textColor="#fff"
                android:textSize="21sp" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginTop="270dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:rowCount="6"
                android:columnCount="4"
                android:useDefaultMargins="true">

                <TextView
                    android:layout_columnSpan="2"
                    android:text="Email"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"/>
                <TextView
                    android:text="pruebita@gmail.com"
                    android:layout_columnSpan="3"
                    android:textSize="18dp"
                    />

                <TextView
                    android:text="Sexo"
                    android:layout_row="0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:textColor="@color/primaryColor"/>
                <TextView
                    android:text="Masculino"
                    android:layout_columnSpan="1"
                    android:textSize="18dp"
                    />

                <TextView
                    android:text="Grado educativo"
                    android:layout_columnSpan="2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"/>
                <TextView
                    android:text="Bachiller"
                    android:layout_columnSpan="3"
                    android:textSize="18dp"
                    />

                <TextView
                    android:text="Distrito"
                    android:layout_row="0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:textColor="@color/primaryColor"/>
                <TextView
                    android:text="La Molina"
                    android:layout_columnSpan="1"
                    android:textSize="18dp"
                    />

            </GridLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</GridLayout>